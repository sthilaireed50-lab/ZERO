-- Blox Fruits Sea 1 Auto Quest + Auto Farm Simples (2026 Edition)
-- Inspirado em partes de Redz/Annie/ZERO + lógica pública
-- Use em executor mobile/PC (Delta, KRNL, Solara)
-- Recomendado: Alt account!

getgenv().Config = {
    AutoFarm = true,
    AutoQuest = true,
    FastAttack = true,
    TweenSpeed = 350,           -- velocidade do fly/tween (ajuste se crashar)
    DistanceFromMob = 5,        -- quão perto ficar do mob
    MobName = "",               -- auto detecta por quest
    QuestNPC = nil,
}

local Player = game.Players.LocalPlayer
local TweenService = game:GetService("TweenService")
local VirtualUser = game:GetService("VirtualUser")
local RunService = game:GetService("RunService")

-- Função Tween (movimento suave, usado em ZERO/Redz style)
local function TweenTo(pos)
    local tweenInfo = TweenInfo.new(
        (Player.Character.HumanoidRootPart.Position - pos).Magnitude / Config.TweenSpeed,
        Enum.EasingStyle.Linear
    )
    local tween = TweenService:Create(Player.Character.HumanoidRootPart, tweenInfo, {CFrame = CFrame.new(pos)})
    tween:Play()
    tween.Completed:Wait()
end

-- Anti-AFK (comum em todos os hubs)
RunService.RenderStepped:Connect(function()
    if Player.Character then
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
    end
end)

-- Função principal de Auto Quest (lógica simplificada para Sea 1)
local function GetQuest()
    if not Config.AutoQuest then return end
    
    local quests = {
        {Level = 0,   NPC = "BanditQuest",   Mob = "Bandit",   Pos = Vector3.new(1059, 16, 1548)},   -- Starter Island
        {Level = 14,  NPC = "MonkeyQuest",   Mob = "Monkey",   Pos = Vector3.new(-1400, 37, 100)},    -- Jungle
        {Level = 30,  NPC = "GorillaQuest",  Mob = "Gorilla",  Pos = Vector3.new(-1400, 37, -500)},   -- Jungle
        {Level = 40,  NPC = "SnowBandit",    Mob = "Snow Bandit", Pos = Vector3.new(1380, 87, -1300)}, -- Frozen Village
        -- Adicione mais se quiser (até ~700)
    }
    
    local myLevel = Player.Data.Level.Value
    
    for _, q in ipairs(quests) do
        if myLevel >= q.Level and myLevel < (q.Level + 15) then  -- range aproximado
            Config.MobName = q.Mob
            Config.QuestNPC = q.NPC
            print("Quest selecionada: " .. q.Mob)
            return q.Pos
        end
    end
    print("Nenhuma quest Sea 1 encontrada para level " .. myLevel)
end

-- Auto aceitar/entregar quest (simplificado)
local function HandleQuest()
    if not Config.AutoQuest then return end
    
    local questPos = GetQuest()
    if questPos then
        TweenTo(questPos + Vector3.new(0, 5, 0))  -- vai no NPC
        wait(0.5)
        -- Tenta fireServer pro quest (muda por update, use Redz se não funcionar)
        game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("StartQuest", Config.QuestNPC, 1)
    end
end

-- Auto Farm mobs da quest
local function AutoFarm()
    if not Config.AutoFarm then return end
    
    local enemies = workspace.Enemies:GetChildren()
    for _, enemy in ipairs(enemies) do
        if enemy:IsA("Model") and enemy:FindFirstChild("Humanoid") and enemy.Humanoid.Health > 0 then
            local hum = enemy.Humanoid
            local hrp = enemy:FindFirstChild("HumanoidRootPart") or enemy.PrimaryPart
            
            if hrp and (hrp.Position - Player.Character.HumanoidRootPart.Position).Magnitude < 500 then
                if string.find(enemy.Name:lower(), Config.MobName:lower()) then
                    TweenTo(hrp.Position + Vector3.new(0, Config.DistanceFromMob, 0))
                    wait(0.1)
                    
                    -- Fast attack simples
                    if Config.FastAttack then
                        game:GetService("VirtualUser"):ClickButton1(Vector2.new())
                        -- Ou use tool attack se equipado
                    end
                end
            end
        end
    end
end

-- Loop principal
spawn(function()
    while true do
        pcall(function()
            if Config.AutoQuest then
                HandleQuest()
            end
            if Config.AutoFarm then
                AutoFarm()
            end
        end)
        wait(0.3)
    end
end)

print("Script Sea 1 simples rodando! Ative AutoFarm e AutoQuest no config.")
print("Para melhor auto quest → use Redz Hub completo:")
print('loadstring(game:HttpGet("https://raw.githubusercontent.com/tlredz/Scripts/refs/heads/main/main.luau"))()')
